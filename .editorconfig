# EditorConfig helps maintain consistent coding styles for multiple
# developers working on the project across various editors and IDEs.
# Learn more at: https://editorconfig.org
root = true

[*]
# Sets UTF-8 character set for proper text encoding.
charset = utf-8

# Uses LF line endings for cross-platform compatibility.
end_of_line = lf

# Defines spacing preferences for better code readability.
indent_size = 2
indent_style = space

# Ensures files end with newline for POSIX compliance.
insert_final_newline = true

# Limits line length to improve code readability.
max_line_length = 120

# Removes unnecessary whitespace at line endings.
trim_trailing_whitespace = true

[*.{md,sql}]
# Disables line length limit for better content authoring.
max_line_length = off

# Preserves file formatting without adding final newline.
insert_final_newline = false

# Preserves trailing whitespace for Markdown line breaks.
trim_trailing_whitespace = false
